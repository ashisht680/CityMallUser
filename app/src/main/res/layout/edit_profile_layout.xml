                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtMobileHd"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@android:color/white"
                        android:gravity="center|left"
                        android:paddingLeft="5dp"
                        android:text="Phone"
                        android:textColor="@color/brown_color"
                        android:textSize="12dp"  />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/txtMobileHd"
                        android:rotation="0"
                        android:src="@drawable/shape_white_triangle" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toLeftOf="@+id/imgverify2"
                        android:layout_toRightOf="@+id/img2"
                        android:background="@color/brown_color"
                        android:gravity="center|left"
                        android:hint="+91-123567890"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="12dp"  />

                </RelativeLayout>
            </LinearLayout>

