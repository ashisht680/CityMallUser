<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_black">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black_transparent_color"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/favourite_malls" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgProfile"
                    android:layout_centerInParent="true"
                    android:text="Profile"
                    app:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black_transparent_color">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/personName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/rlEdit"
                    android:padding="5dp"
                    android:text="Ashish Tiwari Javin Indian "
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rlEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/events" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgEdit"
                        android:layout_centerInParent="true"
                        android:text="Edit"
                        android:textColor="@android:color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtEmailHd"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@color/black_transparent_color"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:textSize="10dp"
                    android:text="Email"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/txtEmailHd"
                    android:rotation="0"
                    android:src="@drawable/shape_triangle"  />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="10dp"
                    android:layout_toLeftOf="@+id/imgverify1"
                    android:layout_toRightOf="@+id/img1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="abcdefg@xyz.com"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/imgverify1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_transparent_color"></View>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtMobileHd"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@color/black_transparent_color"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:textSize="10dp"
                    android:text="Phone"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/txtMobileHd"
                    android:rotation="0"
                    android:src="@drawable/shape_triangle" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtMonile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/img2"
                    android:layout_toLeftOf="@+id/imgverify2"
                    android:gravity="center|left"
                    android:textSize="10dp"
                    android:singleLine="true"
                    android:text="+91-123567890"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/imgverify2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_transparent_color"></View>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
