                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/txtDOBHd"
                    android:rotation="0"
                    android:src="@drawable/shape_triangle" />
                <android.support.v7.widget.AppCompatTextView
