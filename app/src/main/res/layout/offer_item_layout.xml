<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <CheckBox
        android:id="@+id/chkImageOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:button="@drawable/selector"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:transformPivotX="34dp"
        android:transformPivotY="0dp" />

    <ImageView
        android:id="@+id/imgShopLogoOffer"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/button_border_black"
        android:padding="1dp"
        android:src="@mipmap/logo" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtShopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/chkImageMall"
        android:layout_toRightOf="@+id/imgShopLogoOffer"
        android:singleLine="true"
        android:text="Bharat sweets"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtShopName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgShopLogoOffer"
        android:text="Shubhash nagar,New Delhi"
        android:textSize="12sp" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtOfferAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgShopLogoOffer"
        android:layout_below="@+id/txtAddress"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:text="30% Off"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtOfferCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgShopLogoOffer"
        android:layout_below="@+id/txtOfferAmount"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:text="On clothes"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtTimingOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOfferCategory"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgShopLogoOffer"
        android:text="02-09-16 till 10-09-16"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imgShopLogoOffer"
        android:background="@color/wow_gray"
        android:layout_marginTop="10dp"
        ></View>



</RelativeLayout>